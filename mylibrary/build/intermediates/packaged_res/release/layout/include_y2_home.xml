<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true">

    <LinearLayout
        android:id="@+id/ll_transport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="264dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_home_transport02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/home_transport"/>

        <TextView
            android:id="@+id/tv_home_transport"
            style="@style/TextStyle"
            android:layout_gravity="center"
            android:text="配送"
            android:textSize="32sp"/>

        <TextView
            style="@style/TextStyle"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Transport"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_home_other02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/home_other_big"/>

        <TextView
            android:id="@+id/tv_home_other"
            style="@style/TextStyle"
            android:layout_gravity="center"
            android:text="其他"
            android:textSize="32sp"/>

        <TextView
            style="@style/TextStyle"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Others"/>

    </LinearLayout>
</LinearLayout>