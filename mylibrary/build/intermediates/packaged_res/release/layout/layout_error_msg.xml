<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_top_status_content"
    android:layout_width="356dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="60dp"
    android:layout_marginTop="72dp"
    android:background="@drawable/home_status_dialog_bg"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/rl_top_status_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_top_status_title"
            style="@style/TextStyle"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/top_status_title"
            android:textColor="@color/color_333333"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_top_status_describe"
            style="@style/TextStyle"
            android:layout_below="@id/tv_top_status_title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/top_status_describe"
            android:textColor="@color/color_333333"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_top_status_reset"
            android:layout_width="122dp"
            android:layout_height="56dp"
            android:layout_below="@id/tv_top_status_describe"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="66dp"
            android:background="@drawable/top_status_reset_shape"
            android:text="@string/top_status_reset"
            android:textColor="@android:color/white"
            android:textSize="22sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_top_status_ok"
        style="@style/TextStyle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:text="All OK!"
        android:textColor="@color/color_333333"
        android:textSize="20sp"
        android:visibility="gone"
        tools:visibility="gone"/>
</RelativeLayout>