<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="298dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/rl_goods_door_status_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="115dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_goods_door_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                android:src="@mipmap/goods_door_close_label"/>

            <TextView
                android:id="@+id/tv_goods_door_tips"
                style="@style/TextStyle"
                android:layout_centerVertical="true"
                android:text="@string/goods_tips_close"
                android:textColor="@color/color_00C329"
                android:textSize="21sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_goods_door_status"
            android:layout_width="208dp"
            android:layout_height="296dp"
            android:layout_below="@id/rl_goods_door_status_tips"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/iv_goods_door_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/goods_door_status_close"/>

            <TextView
                android:id="@+id/tv_goods_door_status"
                style="@style/TextStyle"
                android:layout_alignBottom="@id/iv_goods_door_status"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="66dp"
                android:text="点击开门"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_goods_door_status_gif"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_goods_nextaddr"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/rl_goods_door_status"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/status_show_nextaddr_shape"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/status_show_nextaddr_time"/>

            <TextView
                android:id="@+id/tv_goods_door_nextaddr_time"
                style="@style/TextStyle"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_time"
                android:maxLines="1"
                android:text="59秒"
                android:textColor="@color/color_666666"
                android:textSize="22sp"/>

            <TextView
                style="@style/TextStyle"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/tv_goods_door_nextaddr_time"
                android:maxLines="1"
                android:text="后前往下一目的地"
                android:textColor="@color/color_666666"
                android:textSize="18sp"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="36dp"
        android:layout_weight="3">

        <LinearLayout
            android:id="@+id/rl_goods_scan_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp">

            <ImageView
                android:id="@+id/iv_goods_arrive_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="22dp"
                android:src="@mipmap/goods_scan_label"/>

            <TextView
                android:id="@+id/tv_goods_scan_tips"
                style="@style/TextStyle"
                android:text="@string/goods_scan_tips"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_goods_title"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/rl_goods_scan_title"
            android:layout_marginTop="44dp"
            android:background="@drawable/goods_form_title_shape"
            android:gravity="center"
            android:text="物品信息"
            android:textColor="@color/color_217BFF"
            android:textSize="24sp"/>

        <RelativeLayout
            android:id="@+id/rl_goods_form"
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:layout_below="@+id/tv_goods_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_7D7D7D"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_7D7D7D"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_7D7D7D"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_7D7D7D"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_7D7D7D"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_goods_heads"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="条码"
                    android:textColor="@color/color_217BFF"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="名称"
                    android:textColor="@color/color_217BFF"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="规格"
                    android:textColor="@color/color_217BFF"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="数量"
                    android:textColor="@color/color_217BFF"
                    android:textSize="20sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_7D7D7D"/>

            <View
                android:id="@+id/view_goods_heads"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ll_goods_heads"
                android:background="@color/color_7D7D7D"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/goods_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view_goods_heads"
                android:scrollbars="vertical"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_goods_form"
            android:layout_marginTop="28dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goods_text_one"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="发货人:WEIMING"/>

            <TextView
                android:id="@+id/goods_text_two"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_weight="1.2  "
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="收货人:第一医院谢亚群"/>

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1">

                <CheckBox
                    android:id="@+id/cb_returnThing"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="16px"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/black"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:textStyle="normal"
                    android:text="是否有退药或回单"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_goods_next"
                style="@style/TextStyle"
                android:background="@drawable/selector_btn_next"
                android:gravity="center"
                android:text="@string/goods_next"
                android:textColor="@drawable/selector_dialog_btn"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

