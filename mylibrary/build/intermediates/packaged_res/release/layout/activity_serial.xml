<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFC1106"
            android:text="状态"/>
        <TextView
            android:id="@+id/textView_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFC1106"
            android:text="状态"/>

    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <Button
        android:id="@+id/button_open"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="打开串口"/>
    <Button
        android:id="@+id/button_status"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:text="状态"/>
    <Button
        android:id="@+id/button_close"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="关闭串口"/>

    <EditText
        android:id="@+id/editText_send"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="请输入指令"/>

    <Button
        android:id="@+id/button_send"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="发送楼层指令"/>

    <Button
        android:id="@+id/button1_send"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="查询状态"/>
    <Button
        android:id="@+id/button2_send"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:text="登记进电梯"/>

    <Button
        android:id="@+id/button3_send"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:text="登记出电梯"/>

    <Button
        android:id="@+id/button4_send"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="开门"/>

    <Button
        android:id="@+id/button5_send"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="关门"/>
        
        <Button
            android:id="@+id/button7_send"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="清除命令"/>

        <Button
            android:id="@+id/button6_exit"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="退出"/>
</LinearLayout>
</LinearLayout>