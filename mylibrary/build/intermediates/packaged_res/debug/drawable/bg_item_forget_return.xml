<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle"
            android:useLevel="false">
            <solid
                android:color="@android:color/white"/><!-- 背景填充颜色 -->

            <stroke
                android:width="1px"
                android:color="#BBBBBB"/><!-- 描边，边框宽度、颜色 -->
            <corners android:radius="20px"/><!-- 边角圆弧的半径 -->
        </shape>

    </item>
</layer-list>
