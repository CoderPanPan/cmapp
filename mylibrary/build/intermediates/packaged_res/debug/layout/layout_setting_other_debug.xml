<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:visibility="gone"
                tools:showIn="@layout/fragment_setting_other">

    <LinearLayout
        android:id="@+id/ll_setting_other_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_setting_other_mileage"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/setting_volume_count_shape"
            android:text="上传里程"
            android:textColor="@color/color_267FFF"/>

        <Button
            android:id="@+id/btn_setting_other_map"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/setting_volume_count_shape"
            android:text="上传地图"
            android:textColor="@color/color_267FFF"/>

        <Button
            android:id="@+id/btn_setting_other_log"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/setting_volume_count_shape"
            android:text="上传日志"
            android:textColor="@color/color_267FFF"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting_other_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_setting_other_content1"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_setting_recovery"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/setting_volume_count_shape"
            android:text="恢复位置"
            android:textColor="@color/color_267FFF"/>

        <Button
            android:id="@+id/btn_setting_other_two2"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/setting_volume_count_shape"
            android:text="恢复楼层排序"
            android:textColor="@color/color_267FFF"/>

        <Button
            android:id="@+id/btn_setting_other_two3"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/setting_volume_count_shape"
            android:text="上传位置"
            android:textColor="@color/color_267FFF"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting_other_content3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_setting_other_content2"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_setting_third01"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/setting_volume_count_shape"
            android:text="退出程序"
            android:textColor="@color/color_267FFF"/>

        <Button
            android:id="@+id/btn_setting_third02"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/setting_volume_count_shape"
            android:text=""
            android:textColor="@color/color_267FFF"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_setting_third03"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/setting_volume_count_shape"
            android:text=""
            android:textColor="@color/color_267FFF"
            android:visibility="invisible"/>
    </LinearLayout>

</RelativeLayout>